[
  { "id": 1, "text": "Zorlukla beraber kolaylık vardır.", "source": "Kur’an 94:6" },
  { "id": 2, "text": "O, nerede olursan ol seninle beraberdir.", "source": "Kur’an 57:4" },
  { "id": 3, "text": "Sabır, kurtuluşun anahtarıdır.", "source": "Hadis" },
  { "id": 4, "text": "Kalpler ancak Allah’ı anmakla huzur bulur.", "source": "Kur’an 13:28" },
  { "id": 5, "text": "Şükür, azı çoğa çevirir." },
  { "id": 6, "text": "Allah’a güven, o asla vaadinden dönmez." },
  { "id": 7, "text": "Sabır ve şükür, hayatın terazisidir." },
  { "id": 8, "text": "Sebebin Allah ise, vazgeçmezsin." },
  { "id": 9, "text": "Namaz kıl, kaygı azalır." },
  { "id": 10, "text": "Nur üstüne nur.", "source": "Kur’an 24:35" },
  { "id": 11, "text": "Dünya bir an, ebediyet için hazırlan." },
  { "id": 12, "text": "Söz bittiğinde sükût ibadettir." },
  { "id": 13, "text": "Bırak ve Allah’a teslim ol." },
  { "id": 14, "text": "Tevekkül: Güvende olmanın huzuru." },
  { "id": 15, "text": "Allah kalbindeki sessiz duaları da işitir." },
  { "id": 16, "text": "Allah’ı andıkça kalbin daha çok huzur bulur." },
  { "id": 17, "text": "Allah’ın rahmetinden ümit kesme.", "source": "Kur’an 39:53" },
  { "id": 18, "text": "Sessiz sabrın bile Allah katında yankı bulur." },
  { "id": 19, "text": "Her imtihan seni Rabbine biraz daha yaklaştırır." },
  { "id": 20, "text": "Dua edenin yükü hafifler." },
  { "id": 21, "text": "Allah geciktiriyorsa, hazırlıyordur." },
  { "id": 22, "text": "İman görmek değil, görmeden inanabilmektir." },
  { "id": 23, "text": "Dünya geçici, baki olana yönel." },
  { "id": 24, "text": "Kalbinde olanı Allah bilir, sen söylemesen de." },
  { "id": 25, "text": "Kalbin ağırsa, Yaradan’ı hatırla." },
  { "id": 26, "text": "Samimi bir dua kaderi değiştirebilir." },
  { "id": 27, "text": "Allah’a güvenen asla yalnız kalmaz." },
  { "id": 28, "text": "Işığa yürüyen, karanlığı arkasında bırakır." },
  { "id": 29, "text": "Değerin insanların değil, Allah’ın nazarındadır." },
  { "id": 30, "text": "Her 'neden ben' sorusunda gizli bir 'bana güven' vardır." },
  { "id": 31, "text": "Sessizliğinde bile Allah mücadeleni bilir." },
  { "id": 32, "text": "Affetmek, ruhun zincirini kırmaktır." },
  { "id": 33, "text": "Merhamet, ibadetin en güzel hâlidir." },
  { "id": 34, "text": "Her sabah, tevbe için yeni bir fırsattır." },
  { "id": 35, "text": "Allah’a yakın olan, kalbinde huzur bulur." },
  { "id": 36, "text": "Namazda dökülen gözyaşı boşa değildir." },
  { "id": 37, "text": "Karanlıkta yürürken ışığa güven, o Allah’tır." },
  { "id": 38, "text": "Rahat günlerde Allah’ı an ki zorda O seni ansın." },
  { "id": 39, "text": "Cennet, düşmeyenlerin değil, affedenlerin yeridir." },
  { "id": 40, "text": "Şükreden kalp, sıkıntıyı nimete çevirir." },
  { "id": 41, "text": "Yolunu başkasıyla kıyaslama, Allah her kul için farklı yazar." },
  { "id": 42, "text": "Allah’ın planı, hayalinden daima daha hayırlıdır." },
  { "id": 43, "text": "Mütevazı ol; bastığın toprak senden uzun yaşar." },
  { "id": 44, "text": "Gece uzun olabilir ama sabah mutlaka doğar." },
  { "id": 45, "text": "Güzel ahlak, imanın yarısıdır.", "source": "Hadis" },
  { "id": 46, "text": "Ya hayır söyle ya sus.", "source": "Hadis" },
  { "id": 47, "text": "Allah’a güvenen kalp kırılır ama yıkılmaz." },
  { "id": 48, "text": "Huzuru ara, kusursuzluğu değil." },
  { "id": 49, "text": "Başkalarına yardım eden, Allah’ın yardımını bulur." },
  { "id": 50, "text": "Bir tebessüm sadakadır.", "source": "Hadis" }
]